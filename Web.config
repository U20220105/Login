<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
  </configSections>
  
  <!-- Cadena de conexión a la base de datos -->
  <connectionStrings>
    <!-- 
    IMPORTANTE: Modifica esta cadena de conexión según tu configuración
    Ejemplo para SQL Server local:
    Data Source=localhost;Initial Catalog=HotelDB;Integrated Security=True
    
    Ejemplo para SQL Server con usuario y contraseña:
    Data Source=localhost;Initial Catalog=HotelDB;User ID=sa;Password=tuPassword
    -->
    <add name="HotelDB" 
         connectionString="Data Source=localhost;Initial Catalog=HotelDB;Integrated Security=True" 
         providerName="System.Data.SqlClient" />
  </connectionStrings>
  
  <appSettings>
    <add key="NombreAplicacion" value="Sistema de Reservas de Hotel" />
    <add key="Version" value="1.0.0" />
  </appSettings>
  
  <system.web>
    <compilation debug="true" targetFramework="4.7.2" />
    <httpRuntime targetFramework="4.7.2" />
    
    <!-- Configuración de autenticación -->
    <authentication mode="Forms">
      <forms loginUrl="Index.aspx" 
             timeout="60" 
             slidingExpiration="true" />
    </authentication>
    
    <!-- Configuración de páginas -->
    <pages controlRenderingCompatibilityVersion="4.0" />
    
    <!-- Manejo de errores -->
    <customErrors mode="Off" defaultRedirect="Error.aspx">
      <error statusCode="404" redirect="Error404.aspx" />
      <error statusCode="500" redirect="Error500.aspx" />
    </customErrors>
    
    <!-- Configuración de sesión -->
    <sessionState 
      mode="InProc" 
      timeout="60" 
      cookieless="false" />
  </system.web>
  
  <system.webServer>
    <defaultDocument>
      <files>
        <clear />
        <add value="Index.aspx" />
      </files>
    </defaultDocument>
  </system.webServer>
</configuration>
